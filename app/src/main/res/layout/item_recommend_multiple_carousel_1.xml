<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp">
    
    <ImageView
        android:id="@+id/carousel_1_image"
        android:layout_width="125dp"
        android:layout_height="125dp" />
    
    <TextView
        android:id="@+id/carousel_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="125dp"
        android:layout_alignRight="@id/carousel_1_image"
        android:layout_below="@id/carousel_1_image"/>

    <TextView
        android:id="@+id/carousel_1_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/carousel_1_image"
        android:layout_below="@id/carousel_1_name" />

    <TextView
        android:id="@+id/carousel_1_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/carousel_1_image"
        android:layout_below="@id/carousel_1_price"/>

</RelativeLayout>