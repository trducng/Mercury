<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:background="@android:color/black">

    <!-- TODO: add onClick to TextView here -->

    <TextView
        android:id="@+id/textview_around_deal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textAppearance="@style/WhiteText16"
        android:text="@string/around_deal"/>

    <TextView
        android:id="@+id/textview_around_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textAppearance="@style/WhiteText16"
        android:text="@string/around_event"/>

</LinearLayout>